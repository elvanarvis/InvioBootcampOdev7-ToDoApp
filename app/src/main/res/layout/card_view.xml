<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:elevation="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp"
        android:outlineAmbientShadowColor="@color/dark_green"
        android:outlineSpotShadowColor="@color/light_green"
        app:strokeColor="@color/light_green"
        app:strokeWidth="1dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sacramento"
                android:gravity="center"
                android:text="Ekmek Al"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cv_constraint"
                app:layout_constraintEnd_toStartOf="@id/iv_delete"
                app:layout_constraintStart_toEndOf="@id/checkBox"
                app:layout_constraintTop_toTopOf="@id/cv_constraint" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:alpha="0.7"
                app:layout_constraintBottom_toBottomOf="@id/cv_constraint"
                app:layout_constraintTop_toTopOf="@id/cv_constraint"
                app:layout_constraintEnd_toEndOf="@id/cv_constraint"
                android:src="@drawable/ic_delete"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkBox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:alpha="0.8"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_delete"
                app:layout_constraintBottom_toBottomOf="@id/iv_delete"
                app:layout_constraintStart_toStartOf="@id/cv_constraint"
                app:useMaterialThemeColors="true"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>